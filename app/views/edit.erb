<div class="container">

  <% if @post && @post.errors.any? %>
    <div class="errors">
      <% @post.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div class='form'>
    <form action='/edit/<%= @post.id %>' method='post'>
      <div class='form_title'>
        <label for='form[title]'>Post Title</label>
        <input type='text' name='form[title]' required=true value='<%= @post.title %>' rows=30>
      </div>
      <div class='form_author'>
        <label for='form[author]'>Post Author</label>
        <input type='text' name='form[author]' value='<%= @post.author %>'></input>
      </div>
      <div class='form_body'>
        <label for='form[body]'>Post Body</label>
        <textarea name='form[body]' spellcheck=true required=true><%= @post.body %></textarea>
      </div>
      <div class='form_tags'>
        <label for="tags">Post Tags</label>
        <input type='text' name="form[tags]" value='<%= @tags %>'>
      </div>
      <div class='form_submit'>
        <input class='btn btn-large btn-success' type='submit' value='SUBMIT'>
      </div>
      <div class='form_delete'>
        <button formaction='/destroy/<%= @post.id %>' class='btn btn-large btn-danger' type='submit'>DELETE</button>
      </div>
    </form>
  </div>
<!--   <form id='delete' action='/destroy/<%= @post.id %>' method='post'>
    <input class='form_delete btn btn-large btn-danger' type='submit' value='DELETE'>
  </form> -->

</div>
